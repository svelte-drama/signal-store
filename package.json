		"prettier-plugin-svelte": "^3.1.2",
		"publint": "^0.1.9",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11"
	},
	"packageManager": "pnpm@8.11.0",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
